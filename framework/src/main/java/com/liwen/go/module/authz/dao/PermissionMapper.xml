<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liwen.go.module.authz.dao.PermissionMapper">
	<insert id="createPermission" parameterType="Permission">
		insert into
		sys_permissions(permission, description, available)
		values(#{permission},#{description},#{available})
	</insert>

	<delete id="deletePermission" parameterType="long">
		delete from
		sys_roles_permissions where permission_id=#{permissionId};
		delete from
		sys_permissions where id=#{permissionId};
	</delete>
</mapper>